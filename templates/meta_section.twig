=           {% if meta.Wrangler %}
            Wrangler: <a href="/member/{{ meta.WranglerId }}">{{ meta.Wrangler }}</a>
            {% else %}
            <i>No assigned wrangler</i>
            {% endif %}
        </div> -->
        <div class="col col-sm-6 add-puzzles-to-meta">
            <a class="add-puzzles-to-meta" href="/add/{{ meta.Id }}">+ Add puzzles</a>
        </div>
    </div>
    {% endif %}
    {{ puzzle_table(meta.Id) }}
</section>
