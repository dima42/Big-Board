{% block body %}

<nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <ul class="nav nav-pills flex-column">
        {% for meta in metas %}
        <li class="nav-item">
          <a class="nav-link" href="/meta/{{ meta.parent.id }}">{{ meta.parent.title }}</a>
        </li>
        {% endfor %}
        <li class="nav-item">
          <a class="nav-link" href="/">All metas</a>
        </li>
    </ul>
</nav>

{% if alert %}
<div class="col-12 offset-md-2 col-md-10 banner rounded-0 alert alert-{{ alert.type }}">{{ alert.message }}</div>
{% endif %}

<main role="main" class="col-12 ml-sm-auto col-md-8 col-lg-7 pt-3">

