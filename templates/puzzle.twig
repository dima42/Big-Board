{% extends 'two-col.twig' %}

{% block title %}{{ puzzle.title }}{% endblock %}

{% block filters %}
    {% from 'macros.twig' import solver %}
    <div class="nav-section">
        <h4>Wrangler</h4>
        {% for meta in puzzles_metas %}
            {% if meta.Wrangler %}
            {{ solver(meta.Wrangler) }}
            {% endif %}
        {% else %}
        {% endfor %}
    </div>

    {% if puzzle.status != "solved" %}
    <div class="nav-section">
        <h4>Solvers</h4>

        {% for member in members %}
            {{ solver(member) }}
        {% else %}
            No one :(
        {% endfor %}
    </div>

    {% endif %}
{% endblock %}

{% block content %}
    <div class="puzzle-header">
        <h1>
            <a href="/puzzle/{{ puzzle.id }}">{{ puzzle.title }}</a>
            <i class="icon-{{ puzzle.status }}"></i>
        </h1>

        {% if puzzle.sheetModDate %}
        <div class="last-update">
            Last edited
            <b>{{ puzzle.sheetModDate|time_diff }}</b>
        </div>
        {% endif %}

        <div class="puzzle-metas small">
            {% if is_meta %}
                <span class="badge badge-pill badge-secondary">META</span>
            {% endif %}
            {% for meta in puzzles_metas if meta.Id != puzzle.Id %}
                {% if loop.first %}
                Part of
                {% endif %}
                <span class="meta-wrapper">
                <a class="" href='/puzzle/{{ meta.Id }}'>{{ meta.Title }}</a>
                </span>
            {% endfor %}
        </div>

        <ul class="nav nav-fill puzzle-links mb-3">
            <li class="nav-item"><a class="nav-link link-puzzle" target="_blank" href='{{ puzzle.url }}'>Puzzle</a></li>
            <li class="nav-item"><a class="nav-link link-drive" target="_blank" href='{{ puzzle.getSpreadsheetURL() }}'>Sheet</a></li>
            <li class="nav-item"><a class="nav-link link-slack" target="_blank" href='{{ puzzle.getSlackURL() }}'>Slack</a></li>
            <li class="nav-item"><a class="nav-link link-jitsi" target="_blank" href='{{ puzzle.getJitsiURL() }}'>Video</a></li>
        </ul>
    </div>

    {% block content_main %}
    <form class="puzzleEdit mb-1" data-behavior="confirm" action="/puzzle/{{ puzzle.id }}/solve" method="post">
        <div class="input-group mb-2">
            <span class="input-group-addon">Solution</span>
            <input type="text" class="solution-field form-control" name="solution" placeholder="Enter solution here" value="{{ puzzle.solution }}">
            <span class="input-group-btn">
                <button class="btn btn-dark" type="submit">Go</button>
            </span>
        </div>
    </form>
    <form class="puzzleEdit mb-4" action="/puzzle/{{ puzzle.id }}/change-status" method="post">
        <div class="input-group">
            <span class="input-group-addon">Status</span>
            <select id="statusSelect" class="form-control" name="status">
                {% for status in statuses if (status != "solved" or puzzle.solution != "") %}
                    <option {% if status == puzzle.status %}selected{% endif %} value="{{ status }}">{{ status|capitalize }}</option>
                {% endfor %}
            </select>
            <span class="input-group-btn">
                <button class="btn btn-dark" type="submit">Go</button>
            </span>
        </div>
    </form>

    {% if is_meta %}
        {% from 'macros.twig' import puzzle_table %}
        {{ puzzle_table( puzzle.id ) }}
    {% endif %}
    {% endblock %}

{% endblock %}

{% block aside %}
    {% block edit_button %}
    <div class="buttons">
        <a class="btn btn-light border border-dark" href="/puzzle/{{ puzzle.id }}/edit"><i class="icon-edit"></i> Edit this puzzle</a>
    </div>
    {% endblock %}
{% endblock %}

{% block scripts %}
<script>
$(function() {
    {% if is_meta %}
        loadPuzzleData('/puzzles/meta/{{ puzzle.id }}');
    {% endif %}

    {% if puzzle.solution %}
    $('[data-behavior=confirm]').submit(function(e) {
        var previousSolution = "{{ puzzle.solution }}";
        var newSolution = $('.solution-field').val();
        if (previousSolution != newSolution) {
            if(!confirm('You sure you want to change this solution from ' + previousSolution + ' to ' + newSolution + '?')) {
                e.preventDefault();
            }
        }
        return true;
    });
    {% endif %}
});
</script>
{% block more_scripts %}{% endblock %}
{% endblock %}
