{% extends 'base.twig' %}

{% block bodyclass %}{{ context }}{% endblock %}

{% block navbar %}
<a class="navbar-brand" href="/">{{ team_name }}</a>
<button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="collapse navbar-collapse" id="navbarsExampleDefault">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <a class="nav-link {{ context == 'all' ? 'active' }}" href="/">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link {{ context == 'bymeta' ? 'active' }}" href="/bymeta">By Meta</a>
    </li>
    <li class="nav-item">
      <a class="nav-link {{ context == 'loose' ? 'active' }}" href="/loose">Loose</a>
    </li>
    <li class="nav-item">
      <a class="nav-link {{ context == 'roster' ? 'active' }}" href="/roster">Roster</a>
    </li>
    <li class="nav-item">
      <a class="nav-link {{ context == 'news' ? 'active' }}" href="/news">News</a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Links
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
        <a class="dropdown-item" href="http://{{ slackDomain }}.slack.com/messages/general">Slack</a>
        <a class="dropdown-item" href="https://drive.google.com/drive/u/0/folders/{{ googleDriveId }}">Google Drive</a>
        <a class="dropdown-item" href="{{huntUrl}}">The Hunt</a>
      </div>
    </li>
    <li class="nav-item">
      <a class="nav-link add-link {{ context == 'add' ? 'active' }}" href="/add">+Add</a>
    </li>
  </ul>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link {{ context == 'member' ? 'active' }}" href="/you">{% if not user.slackId %}<span style="color: #FFC108;" class="fas fa-exclamation-triangle"></span>{% endif %} You</a>
    </li>
  </ul>
</div>
{% endblock %}

{% block body %}

<nav class="col-md-2 d-none d-md-block bg-light sidebar">
{% block filters %}{% endblock %}
</nav>

{% if alert.message %}
<div class="alert-banner col-12 offset-md-2 col-md-10 banner rounded-0 alert alert-{{ alert.type }}">{{ alert.message }}</div>
{% endif %}

{% block main_top %}{% endblock %}

<main role="main" class="col-12 {% block main_classes %}col-md-10{% endblock %} pt-3 ml-sm-auto">
{% block content %}{% endblock %}
</main>

{% block column_two %}{% endblock %}

{% endblock %}

{% block footer %}{% endblock %}

{% block external_scripts %}
<script src="/js/scripts.js"></script>
{% endblock %}
