{% extends 'loggedin.twig' %}

{% block content %}
<h1>{{ member.fullName }}</h1>

<form action="/member/{{ member.id }}/edit" method="post">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="full_name">Name</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="full_name" value="{{ member.fullName }}">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="strengths">Strengths</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="strengths" value="{{ member.strengths }}" placeholder="e.g. Renaissance art; 15th century crytography; Horses.">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="slack_handle">Slack display name</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="slack_handle" value="{{ member.slackHandle }}">
            <small class="form-text text-muted">You can find it <a href="https://palindrome2018.slack.com/account/profile">here</a>. No need to enter anything if it's exactly the same as your full name, above.</small>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="slack_handle">Slack User ID</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="slack_id" value="{{ member.slackId }}" placeholder="e.g. U87J885FZ">
            <small class="form-text text-muted">You don't need to fill this in; we'll programatically ask Slack for it. But feel free to manually add it if you want.</small>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-3 sm-9">
            <button class="btn btn-primary btn-lg">Submit</button>
        </div>
    </div>
</form>

{% endblock %}
