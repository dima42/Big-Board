{% macro puzzle_table(puzzles, sol=true, lastmod=false) %}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            {% if sol %}
                <th>Solution</th>
            {% endif %}
            {% if lastmod %}
                <th>Last mod</th>
                <th>By</th>
            {% endif %}
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for puzzle in puzzles %}
        <tr id="puzzle{{ puzzle.id }}" class="puzzle {{ puzzle.status }} {% if puzzle.meta == 1 %}meta{% endif %}">
            <td>{{ puzzle.status | emojify }}</td>
            <td><a href="/puzzle/{{ puzzle.id }}">{{ puzzle.title }}</a></td>
            {% if sol %}
                <td>
                    {{ puzzle.solution }}
{#                     <input
                    name='puzans_"{{ puzzle.PUZID }}' value='{{ puzzle.PUZANS }}'
                    class='{{ puzzle. STATUS }}'
                    style='border-width:0px; text-align: center;'
                    onchange='editAnswer(this, "{{ puzzle. PUZID }}", "{{ puzzle. PUZANS }}", {{ user_id }}, "{{ puzzle.PUZZLE_NAME }}")'
                    > #}
                </td>
            {% endif %}
            {% if lastmod %}
                <td>{{ puzzle.lastMod }}</td>
                <td>{{ puzzle.lastModBy }}</td>
            {% endif %}
            <td><a href="/puzzle/{{ puzzle.id }}/edit">‚úèÔ∏è</a></td>
            <td>{% if puzzle.url %}<a href="{{ puzzle.url }}"><img src="/img/mit.png" width="20" alt=""></a>{% endif %}</td>
            <td><a href="https://docs.google.com/spreadsheets/d/{{ puzzle.spreadsheetId }}"><img src="/img/drive.png" width="20" alt=""></a></td>
            <td><a href="http://palindrome2017.slack.com/messages/{{ puzzle.slackChannel }}"><img src="/img/slack.png" width="20" alt=""></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endmacro puzzle_table %}

{% macro member_card(member) %}
<div class="card mb-3">
    <div class="card-body">
        <small class="solvers">You are logged in as</small>
        <strong>{{ member.fullName }}</strong><br>
        {{ member.strengths|default("(No strengths listed) üòø") }}<br>
        {% if member.slackId %}
            <img src="/img/slack.png" width="15px" alt=""> {{ member.slackId }}
        {% endif %}
    </div>
    <div class="card-footer">
        <a href="/member/{{ member.id }}/edit">Edit your profile</a>
    </div>
</div>
{% endmacro member_card %}
