{% extends 'loggedin.twig' %}

{% block content %}
<h1>Team Palindrome</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th><img src="/img/slack.png" width="15px" alt=""></th>
            <th>Strengths</th>
            <th>Working onâ€¦</th>
        </tr>
    </thead>
    <tbody>
    {% for person in roster %}
    <tr>
        <td>{{ person.fullName }}</td>
        <th>{% if person.slackID %}<a href="http://palindrome2018.slack.com/team/{{ person.slackId }}"><img src="/img/slack.png" width="15px" alt=""></a>{% endif %}</th>
        <td>{{ person.strengths }}</td>
        <td>
            {% for pm in person.puzzleMembers %}
                <a href="/puzzle/{{ pm.puzzle.id }}">{{ pm.puzzle.title }}</a><br>
            {% endfor %}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

