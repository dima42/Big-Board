{% extends 'loggedin.twig' %}

{% block filters %}
<h4 class="nav-link">Filter by</h4>
<ul class="nav nav-pills flex-column" data-filter-list>
    <li class="nav-item">
        <a data-toggle="tab" class="nav-link" id="all-tab" href="#">All</a>
    </li>
    <li class="nav-item">
        <a data-toggle="tab" data-filter-by="active" class="nav-link" id="active-tab" href="#">Active</a>
    </li>
    <li class="nav-item">
        <a data-toggle="tab" data-filter-by="inactive" class="nav-link" id="inactve-tab" href="#">Inactive</a>
    </li>
</ul>
{% endblock %}

{% block content %}
<h1>Team Palindrome</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th><img src="/img/slack.png" width="15px" alt=""></th>
            <th>Strengths</th>
            <th>Working onâ€¦</th>
        </tr>
    </thead>
    <tbody>
    {% for person in roster %}
    <tr data-filter="{{ person.puzzleMembers|length|yesno('active', 'inactive') }}">
        <td>{{ person.fullName }}</td>
        <th>{% if person.slackID %}<a href="http://palindrome2018.slack.com/team/{{ person.slackId }}"><img src="/img/slack.png" width="15px" alt=""></a>{% endif %}</th>
        <td>{{ person.strengths }}</td>
        <td>
            {% for pm in person.puzzleMembers %}
                <a href="/puzzle/{{ pm.puzzle.id }}">{{ pm.puzzle.title }}</a><br>
            {% endfor %}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block scripts %}
<script>
$(function() {
    $('.nav a').first().click();
});
</script>
{% endblock %}
