{% extends 'two-col.twig' %}

{% block filters %}
    {% from 'macros.twig' import avatar %}
    <div class="nav-section">
        <h4>Wrangler</h4>
        {% for meta in puzzles_metas %}
            {% if meta.Wrangler %}
            {{ avatar(meta.Wrangler) }}
            {% endif %}
        {% else %}
        {% endfor %}
    </div>

    {% if puzzle.status != "solved" %}
    <div class="nav-section">
        <h4>Solvers</h4>

        {% for member in members %}
            {{ avatar(member) }}
        {% else %}
            No one :(
        {% endfor %}
    </div>

    <div class="nav-section">
        {% if not is_member %}
        <form class="join-leave" action="/puzzle/{{ puzzle.id }}/join" method="post">
            <button type="submit" class="btn btn-primary">Work on this</button>
        </form>
        {% else %}
        <form class="join-leave" action="/puzzle/{{ puzzle.id }}/leave" method="post">
            <button type="submit" class="btn btn-primary">Leave this</button>
        </form>
        {% endif %}
    </div>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="puzzle-header">
        <div class="puzzle-metas small">
            {% if is_meta %}
                <span class="badge badge-pill badge-secondary">META</span>
            {% endif %}
            {% for meta in puzzles_metas if meta.Id != puzzle.Id %}
                {% if loop.first %}
                Part of
                {% endif %}
                <a class="" href='/puzzle/{{ meta.Id }}'>{{ meta.Title }}</a>
            {% endfor %}
        </div>

        <h1>
            <a href="/puzzle/{{ puzzle.id }}">{{ puzzle.title }}</a>
            <i class="icon-{{ puzzle.status }}"></i>
        </h1>
    </div>

    {% block content_main %}
    <form class="puzzleEdit mb-1" data-behavior="confirm" action="/puzzle/{{ puzzle.id }}/solve" method="post">
        <div class="input-group mb-2">
            <span class="input-group-addon">Solution</span>
            <input type="text" class="solution-field form-control" name="solution" placeholder="Enter solution here" value="{{ puzzle.solution }}">
            <span class="input-group-btn">
                <button class="btn btn-dark" type="submit">Go</button>
            </span>
        </div>
    </form>
    <form class="puzzleEdit mb-4" action="/puzzle/{{ puzzle.id }}/change-status" method="post">
        <div class="input-group">
            <span class="input-group-addon">Status</span>
            <select id="statusSelect" class="form-control" name="status">
                {% for status in statuses %}
                    <option {% if status == puzzle.status %}selected{% endif %} value="{{ status }}">{{ status|capitalize }}</option>
                {% endfor %}
            </select>
            <span class="input-group-btn">
                <button class="btn btn-dark" type="submit">Go</button>
            </span>
        </div>
    </form>

    {% if is_meta %}
        {% from 'macros.twig' import puzzle_table %}
        {{ puzzle_table( puzzle.id ) }}
    {% endif %}

    {% if notes|length %}
        {% for note in notes %}
            <div class="row note-row">
                <div class="col-sm-3">
                    <small class="entry-by">{{ note.author.fullName }}</small>
                    <small class="entry-when">
                        {% set difference = date(now).diff(date(note.createdAt)) %}
                        {% if difference.days >= 2 %}
                            {{ difference.days }} days
                        {% else %}
                            {{ difference.format('%H:%I') }} ago
                        {% endif %}
                    </small>
                </div>
                <div class="col-sm-9 entry-body">
                    {{ note.body }}
                    <form action="/puzzle/{{ puzzle.id }}/delete-note/{{ note.id }}" class="delete-note" method="post">
                        <button type="submit" class="close">
                            <span>&times;</span>
                        </button>
                    </form>
                </div>
            </div>
        {% endfor %}
    {% endif %}
        <form class="new-note-form" action="/puzzle/{{ puzzle.id }}/add-note" method="post">
        <div class="row">
            <div class="col-sm-3">
                <small>Add a note:</small>
            </div>
            <div class="col-sm-9">
                <textarea type="text" class="form-control" name="body" rows="2"></textarea>
                <br>
                <button class="btn btn-dark" type="submit">Submit new note</button>
            </div>
        </div>
        </form>
    {% endblock %}
{% endblock %}

{% block aside %}
    <div class="puzzle-links list-group mb-3">
        <a class="list-group-item list-group-item-action" href='{{ puzzle.url }}'><img src="/img/mit.png" width="15px" alt=""> Puzzle page</a>
        <a class="list-group-item list-group-item-action" href='{{ puzzle.getSpreadsheetURL() }}'><img src="/img/drive.png" width="15px" alt=""> Google Sheet</a>
        <a class="list-group-item list-group-item-action" href='{{ puzzle.getSlackURL() }}'><img src="/img/slack.png" width="15px" alt=""> Slack</a>
    </div>

    <div class="list-group mb-3">
        {% for tag in puzzles if tag.level > 0 %}
            <a data-behavior="tag-alert" data-id="{{ tag.id }}" class="{% if tag.id in tag_alerts %}alerted{% endif %} level{{ tag.level }} list-group-item list-group-item-action" href='#'>{{ tag.title }}</a>
        {% endfor %}
    </div>

    <div class="list-group mb-3">
        {% for tag in topics if tag.level > 0 %}
            <a data-behavior="tag-alert" data-id="{{ tag.id }}" class="{% if tag.id in tag_alerts %}alerted{% endif %} level{{ tag.level }} list-group-item list-group-item-action" href='#'>{{ tag.title }}</a>
        {% endfor %}
    </div>

    <div class="mb-3">
        <a class="btn btn-light border border-dark" href="/puzzle/{{ puzzle.id }}/edit">✏️  &nbsp; Edit this puzzle</a>
    </div>
{% endblock %}

{% block scripts %}
<script>
$(function() {
    $('[data-behavior=topic-alert]').click(function(e) {
        e.preventDefault();

        var data = {
            'topic_id': $(this).data('id')
        };
        var link = $(this);

        if (link.hasClass('alerted')) {
            return;
        }

        $.post('/topics/alert/{{ puzzle.id }}', data, function(response) {
            if (response['ok']) {
                link.addClass('alerted');
            }
        });
    });

    {% if is_meta %}
        loadPuzzleData('/puzzles/meta/{{ puzzle.id }}');
    {% endif %}

    {% if puzzle.solution %}
    $('[data-behavior=confirm]').submit(function(e) {
        var previousSolution = "{{ puzzle.solution }}";
        var newSolution = $('.solution-field').val();
        if (previousSolution != newSolution) {
            if(!confirm('You sure you want to change this solution from ' + previousSolution + ' to ' + newSolution + '?')) {
                e.preventDefault();
            }
        }
        return true;
    });
    {% endif %}
});
</script>
{% block more_scripts %}{% endblock %}
{% endblock %}
