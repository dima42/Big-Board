{% from 'macros.twig' import puzzle_table %}
<section class="puzzle-section">
    <span class="anchor-target" id="meta-{{ meta.Id }}"></span>
    <h2>
        {% if meta.Id %}
            <a href="/puzzle/{{ meta.Id }}">{{ meta.Title }}</a>
        {% else %}
            {{ meta.Title }}
            {{ meta.Status }}
        {% endif %}
    </h2>
    {% if meta.Id != 0 %}
    <div class="puzzle-metadata row">
