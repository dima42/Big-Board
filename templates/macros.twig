{% macro slack_url(slack_channel) %}http://palindrome2018.slack.com/messages/{{ slack_channel }}{% endmacro %}

{% macro puzzle_table(puzzles, sol=true, lastmod=false) %}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            {% if sol %}
                <th>Solution</th>
            {% endif %}
            {% if lastmod %}
                <th>Last mod</th>
                <th>By</th>
            {% endif %}
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for puzzle in puzzles %}
        <tr id="puzzle{{ puzzle.id }}" class="puzzle {{ puzzle.status }} {% if puzzle.meta == 1 %}meta{% endif %}">
            <td>{{ puzzle.status | emojify }}</td>
            <td><a href="/puzzle/{{ puzzle.id }}">{{ puzzle.title }}</a></td>
            {% if sol %}
                <td>
                    {{ puzzle.solution }}
{#                     <input
                    name='puzans_"{{ puzzle.PUZID }}' value='{{ puzzle.PUZANS }}'
                    class='{{ puzzle. STATUS }}'
                    style='border-width:0px; text-align: center;'
                    onchange='editAnswer(this, "{{ puzzle. PUZID }}", "{{ puzzle. PUZANS }}", {{ user_id }}, "{{ puzzle.PUZZLE_NAME }}")'
                    > #}
                </td>
            {% endif %}
            {% if lastmod %}
                <td>{{ puzzle.lastMod }}</td>
                <td>{{ puzzle.lastModBy }}</td>
            {% endif %}
            <td><a href="/puzzle/{{ puzzle.id }}/edit">✏️</a></td>
            <td>{% if puzzle.url %}<a href="{{ puzzle.url }}"><img src="/img/mit.png" width="20" alt=""></a>{% endif %}</td>
            <td><a href="{{ puzzle.spreadsheet_id }}"><img src="/img/drive.png" width="20" alt=""></a></td>
            <td><a href="http://palindrome2017.slack.com/messages/{{ puzzle.SLACK }}"><img src="/img/slack.png" width="20" alt=""></a></td>
        </tr>
    {% endfor %}
        <tr>
            <td></td>
            <td colspan="5"><a class="" href="/add/{{ puzzles.0.id }}">+ Add puzzle(s) to {{ puzzles.0.title }} meta</a></td>
        </tr>
    </tbody>
</table>
{% endmacro %}
